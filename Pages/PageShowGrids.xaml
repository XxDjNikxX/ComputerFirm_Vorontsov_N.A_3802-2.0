<Page x:Class="ComputerFirm_Vorontsov_N.A_3802.Pages.PageShowGrids"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerFirm_Vorontsov_N.A_3802.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageShowGrids" FontFamily="{StaticResource OpenSansLight}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="15" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Foreground="White">
              Выберите Таблицу
        </TextBlock>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" >
            <StackPanel Orientation="Vertical">
                <Button Name="btnShowCity" Click="btnShowCity_Click" Background="Black" Foreground="White"  BorderBrush="White" Opacity=".50" Width="125" Height="50">Города</Button>
                <Button Name="btnShowCustomer" Click="btnShowCustomer_Click" Margin="0,5" Background="Black" Foreground="White"  BorderBrush="White" Opacity=".50" Width="125" Height="50">Покупатели</Button>
                <Button Name="btnShowSales" Click="btnShowSales_Click"  Background="Black" Foreground="White" Grid.Row="1"  BorderBrush="White" Opacity=".50" Width="125" Height="50">Продажи</Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10,0">
                <Button Name="btnShowProduct" Click="btnShowProduct_Click"   Background="Black" Foreground="White"  BorderBrush="White" Opacity=".50" Width="125" Height="50">Продукты</Button>
                <Button Name="btnShowProductType" Click="btnShowProductType_Click"  Margin="0,5" Background="Black" Foreground="White"  BorderBrush="White" Opacity=".50" Width="125" Height="50">Виды Продуктов</Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Vertical"  Name="AdminPanel">
            <TextBlock FontSize="15" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Foreground="White">
                Админ Панель:
            </TextBlock>
            <Button Name="btnUsersShow" Click="btnUsersShow_Click"  Background="Black" Foreground="White" BorderBrush="White" Opacity=".50" Width="125" Height="50">Учётные записи</Button>
            <Button Name="btnRolesShow" Margin="0,10,0,0" Click="btnRolesShow_Click"  Background="Black" Foreground="White"  BorderBrush="White" Opacity=".50" Width="125" Height="50">Роли</Button>
        </StackPanel>
        
    </Grid>
</Page>
